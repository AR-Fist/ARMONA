<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="arViewModel"
            type="com.arfist.armona.screen.ar.ArViewModel" />
        <variable
            name="sharedViewModel"
            type="com.arfist.armona.shared.SharedViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screen.ar.ArFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/testPlaceholder"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/stopPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/testPlaceholder"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/testPlaceholder"
                android:textSize="24sp" />

            <view
                android:id="@+id/gl_view"
                class="com.arfist.armona.screen.ar.GLView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:windowIsTranslucent="true" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_ar_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/floting_button_margin"
            android:clickable="true"
            android:contentDescription="@string/switch_button"
            android:focusable="true"
            android:src="@drawable/ic_launcher_foreground" />

    </FrameLayout>
</layout>