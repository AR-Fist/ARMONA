<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mapViewModel"
            type="com.arfist.armona.shared.SharedViewModel" />
        <variable
            name="ArViewModel"
            type="com.arfist.armona.screen.ar.ArViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".screen.map.MapFragment" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_map_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/floting_button_margin"
            android:clickable="true"
            android:contentDescription="@string/switch_button"
            android:focusable="true"
            android:src="@drawable/ic_launcher_foreground" />

    </FrameLayout>
</layout>